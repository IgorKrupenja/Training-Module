{
"response": [
  {{#each responses}}
    {{assign 'response' @key}}
    {"response": "{{@key}}",
     "text": {{#if this.[0].condition}}"{{{this.[1].text}}}"{{else}}"{{{this.[0].text}}}"{{/if}},
      "rules": [
        {{assign 'multiple' false}}
        {{#each ../rules}}
          {{#each _source.steps as |step|}}
            {{#if (eq @root.response step.action)}}
              {{#if @root.multiple}},{{/if}}
              "{{../_source.rule}}"
              {{assign 'multiple' true}}
            {{/if}}
          {{/each}}
        {{/each}}
      ],
      "stories": [
        {{assign 'multiple' false}}
        {{#each ../stories}}
          {{#each _source.steps as |step|}}
            {{#if (eq @root.response step.action)}}
              {{#if @root.multiple}},{{/if}}
              "{{../_source.story}}"
              {{assign 'multiple' true}}
            {{/if}}
          {{/each}}
        {{/each}}
      ]
    }{{#unless @last}},{{/unless}}
  {{/each}}
]
}