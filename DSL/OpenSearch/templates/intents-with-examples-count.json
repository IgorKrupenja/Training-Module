{
  "script": {
    "lang": "mustache",
    "source": {
      "size": 0,
      "aggs": {
        "hot": {
          "terms": {
            "field": "intent",
            "size": 1000
          },
          "aggs": {
            "examples_counts": {
              "value_count": {
                "field": "examples"
              }
            }
          }
        }
      },
      "query": {
        {{#intent}}
        "wildcard": {
          "intent": "*{{intent}}*"
        }
        {{/intent}}
        {{^intent}}
        "match_all": {}
        {{/intent}}
      }
    },
    "params": {
      "intent": ""
    }
  }
}