{
  "script": {
    "lang": "mustache",
    "source": {
      "from": "{{from}}",
      "size": "{{size}}",
      "query": {
        "wildcard": {
          "regex": {
            "value": "*{{searchTerm}}*"
          }
        }
      },
      "_source": {
        "excludes": ["examples"]
      }
    },
    "params": {
      "from": 0,
      "size": 50,
      "searchTerm": ""
    }
  }
}
